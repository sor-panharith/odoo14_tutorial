<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <!--    !!acton-->
    <record id="action_hospital_male" model="ir.actions.act_window">
        <field name="name">Male</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'default_note' : 'New Patient', 'hide_gender': 1}</field>
        <field name="domain"> [('gender','=', 'male' )]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first kids!
            </p>
        </field>
    </record>

    <!--    !! menu item-->
    <menuitem id="menu_male"
              name="Male Patient"
              parent="hospital_patient_root"
              action="action_hospital_male"
              sequence="30"/>

    <record id="action_hospital_female" model="ir.actions.act_window">
        <field name="name">Female</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{'default_gender' : 'female','default_note' : 'New Patient', 'hide_gender': 1}</field>
        <field name="domain"> [('gender','=', 'female' )]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first kids!
            </p>
        </field>
    </record>

    <!--    !! menu item-->
    <menuitem id="menu_female"
              name="Female Patient"
              parent="hospital_patient_root"
              action="action_hospital_female"
              sequence="40"/>

</odoo>